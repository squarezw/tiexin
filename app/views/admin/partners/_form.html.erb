<table class="form_container">
	<tr>
		<td width="15%"><label class="required"><%= s_('Partner|Code')%></label></td>
		<td width="*"><%= form.text_field :code, :size=>10%></td>
		<td width="30%"><p class="help"><%= _('Can not longer than %{length} characters.') % { :length => 8 }  %></p></td>
	</tr>
	<tr>
		<td width="15%"><label class="required"><%= s_('Partner|Name')%></label></td>
		<td width="*"><%= form.text_field :name, :size=>40 %></td>
		<td width="30%"><p class="help"><%= _('Can not longer than %{length} characters.') % { :length => 100 }  %></p></td>
	</tr>
	<tr>
		<td width="15%"><label class="required"><%= s_('Partner|Phone number')%></label></td>
		<td width="*"><%= form.text_field :phone_number, :size=>20%></td>
		<td width="30%"><p class="help"><%= _('Can not longer than %{length} characters.') % { :length => 20 }  %></p></td>
	</tr>
	<tr>
		<td width="15%"><label><%= s_('Partner|Contact person')%></label></td>
		<td width="*"><%= form.text_field :contact_person, :size=>20%></td>
		<td width="30%"><p class="help"><%= _('Can not longer than %{length} characters.') % { :length => 8 }  %></p></td>
	</tr>
	<tr>
		<td width="15%"><label><%= s_('Partner|Mail')%></label></td>
		<td width="*"><%= form.text_field :mail, :size=>30 %></td>
		<td width="30%"><p class="help"><%= _('Can not longer than %{length} characters.') % { :length => 50 }  %></p></td>
	</tr>
	<tr>
		<td width="15%"><label class="required"><%= s_('Member|Password')%></label></td>
		<td width="*"><%= form.password_field :password, :size=>10%></td>
		<td width="30%" rowspan="2">			
			<p class="help"><%= _("Can contain alphabet, digit, '.', '-' and '_'. The length must between 6 and 15.") %></p>
			<p class="help"><%= _('Leave it blank if you do not want to modify password.') %></p>
		</td>
	</tr>
	<tr>
		<td width="15%"><label class="required"><%= s_('Member|Password confirmation')%></label></td>
		<td width="*"><%= form.password_field :password_confirmation, :size=>10%></td>
	</tr>
	<tr>
		<td colspan="3" class="button_bar">
			<%= submit_tag _('Submit')%>
		</td>
	</tr>
</table>