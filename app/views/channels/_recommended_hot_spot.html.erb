<div class="recommended_hot_spot">
	<div class="row1">
		<div class="small_hot_spot_picture">
			<%= small_picture_tag_for_hot_spot recommended_hot_spot %>
		</div>
		<div class="name_intro">
			<p class="hot_spot_name"><%= link_to h(localized_description(recommended_hot_spot, :name)), hot_spot_path(recommended_hot_spot), :target=>'_blank'%></p>
			<p class="introduction"><%= truncate(effective_hot_spot_introduction(recommended_hot_spot), 30)%></p>
		</div>
	</div>
	
	<div class="row2">
		<div class="address">
			<p><%= recommended_hot_spot.phone_number%></p>
			<p><%= h(localized_description(recommended_hot_spot, :address))%></p>
		</div>
	</div>
</div>