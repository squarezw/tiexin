			viewport_width: 942,
			viewport_height: 480,
			init_zoom_level_index: 6
		});
        */
        map = new GMap2($('map'));
	map.setCenter(new GLatLng(<%=start_point_for_gmap%>), 15)
        map.addControl(new GLargeMapControl());
        map.addControl(new GOverviewMapControl());
        map.addControl(new GMapTypeControl());
	<% if @hide_search_result -%>
		hide_search_result ();
	<% else -%>
		show_search_result ();
	<% end -%>
	
	<% if @hot_spot -%>
	<%= update_page do |page|
			add_hot_spot_gmarker page, @hot_spot
		end %>
	<% end -%>

	<%if @hot_spots%>
        <%= update_page do |page|
                @hot_spots.each { |res| add_hot_spot_gmarker page, res }
        end %>
	<%end%>

	<% if @area -%>
	<%= update_page do |page|
			add_area_marker page, @area
		end %>	
	<% end -%>
	
