		end %>
	<%  end
	end -%>

        GEvent.addListener(map, 'click', function(overlay, latlng) {
                 if (overlay) {
                          overlay_clicked(overlay);
                }
        });
        
	<% if @current_user and @current_user.has_privilege(:modify_hot_spot) -%>
