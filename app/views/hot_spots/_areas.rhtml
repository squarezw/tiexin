<% areas = hot_spot.areas 
   unless areas.blank? -%>
<div id="areas" class="section">          
	<div class="header">
		<h3><%= _('Areas')%></h3>
	</div>                          
	
	<div class="body">       
		<ul class="list">
			<% for area in areas -%>
				<li><%= link_to h(localized_description(area, :name)), city_area_path(@current_city,area)%></li>
			<% end -%>
		</ul>
	</div>       
</div>

<% end -%>