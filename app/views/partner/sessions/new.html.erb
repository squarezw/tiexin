<% page_title _('Partner Login') -%>  

<h2><%= _('Partner Login')%></h2>

<% form_tag partner_sessions_path, :id=>'login_form' do -%>
<table class="form_container" width="99%" >
	<tr>
		<td width="15%"><label><%= _('Partner|Code') %></label></td>
		<td width="*"><%= text_field_tag :code, nil, :size=>'30' %></td>
	</tr>
	<tr>
		<td><label><%= _('Member|Password') %></label></td>
		<td><%= password_field_tag :password, nil, :size=>'30' %></td>
	</tr>     
	<tr>
		<td><label><%= _('Verification code')%></label></td>
		<td><%= captcha_code_field %></td>	
	</tr>
	<tr>
		<td colspan="2" class="button_bar">
			<%= submit_tag _('Login') %>
			<input type="reset" />
		</td>
	</tr>
</table>
<% end -%>
